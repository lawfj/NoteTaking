<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:visibility="invisible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:text="常规"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/ll_isRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        >


        <TextView

            android:id="@+id/tv_isRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:text="右手操作模式"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_isRight"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:text="侧滑栏从右手边滑出"
            android:textColor="@color/secondary_text"

            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:id="@+id/rel_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/copy_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="自动备份到本地"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/copy_note"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:text="备份笔记到存储卡/NoteTaking/notes.txt"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/change_Theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:text="更换主题"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:lines="1"
        android:text="其他"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/giveLove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:text="给应用点赞"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:text="意见反馈"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list"
        android:lines="1"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:text="关于我们"
        android:textColor="@color/primary_text"
        android:textSize="16sp"/>

</LinearLayout>

